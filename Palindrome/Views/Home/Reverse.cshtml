@model PalindromeModel

<div class="container col-xxl-8 px-4 py-5 mt-5">
    <div class="row gy-2 h-100 row-cols-md-2 rows-cols-1">
        <div class="col border-2 border-end">
            <h1 class="fw-bold lh-1 mb-3">Palindrome Checker</h1>
            <h4 class="lead">
                Check whether the text is a Palindrome or not
            </h4>
            <h5>
                * Palindrome - a word, phrase, or sequence that reads the same backward as forward
            </h5>
            <h2 class="mt-5 border-bottom border-2">
                Instructions
            </h2>
            <p>Enter a word or sentence to be evaluated.</p>
        </div>
        <div class="col">
            <div>
                <h5>Enter a string</h5>

                <form class="row gy-2 gx-3" asp-action="Reverse" asp-controller="Home" method="post"> 
                     <div class="col">
                         <input asp-for="InputWord" class="form-control" value="@Model.InputWord" placeholder="type a word or phrase."/>
                     </div>

                     <div class="col-12 d-flex align-items-center justify-content-satrt justify-content-lg-end">
                         <button class="btn btn-dark btn-lg" type="submit" id="btnSubmit">
                             Palindrome test
                         </button>
                     </div>
                </form>

                <h5 class="mt-5 border-bottom border-2">Reversed Result</h5>
                <div class="col">
                    <p class="form-control">@Model.ReverseWord</p>
                </div>
                <h2 class="mt-5 border-bottom border-2">
                    Palindrome Result
                </h2>
                <div class="table-responsive">
                    <p id="results">
                        @Model.Mesage
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>